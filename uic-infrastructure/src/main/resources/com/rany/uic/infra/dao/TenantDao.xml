<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.rany.uic.infra.dao.TenantDao">
    <resultMap id="BaseResultMap" type="com.rany.uic.infra.po.TenantPO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="isv_id" property="isvId" jdbcType="VARCHAR"/>
        <result column="short_name" property="shortName" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="source" property="source" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="is_deleted" property="isDeleted" jdbcType="CHAR"/>
        <result column="creator" property="creator" jdbcType="VARCHAR"/>
        <result column="modifier" property="modifier" jdbcType="VARCHAR"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
        <result column="status" property="status" jdbcType="CHAR"/>
        <result column="address" property="address" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, isv_id, name, short_name, email, source, phone, is_deleted, creator, modifier, gmt_create,
        gmt_modified, status, address
    </sql>

    <insert id="save" parameterType="com.rany.uic.domain.aggregate.Tenant">
        insert into tenant (id, isv_id, name, short_name, email, source, phone, is_deleted, gmt_create, gmt_modified,
        status, address)
        values (
        #{id.id,jdbcType=BIGINT},
        #{isvId.id,jdbcType=BIGINT},
        #{tenantName.name,jdbcType=BIGINT},
        #{tenantName.shortName,jdbcType=BIGINT},
        #{emailAddress.email,jdbcType=VARCHAR},
        #{source.source,jdbcType=VARCHAR},
        #{phone.phone,jdbcType=VARCHAR},
        #{isDeleted,jdbcType=VARCHAR},
        now(),
        now(),
        #{status},
        #{address}
        )
    </insert>

    <select id="selectByShortName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tenant where is_deleted = '0' and short_name = #{name} limit 1
    </select>


    <select id="selectTenantCountByIsvId" parameterType="java.lang.Long" resultType="java.lang.Integer">
        select count(1) from tenant where isv_id = #{isvId}
    </select>

    <select id="selectList" resultType="com.rany.uic.infra.po.TenantPO"
            parameterType="com.rany.uic.common.params.TenantSearchParam" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tenant
        <where>
            <if test="isvId != null">
                and isv_id = #{isvId}
            </if>
            <if test="name != null">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="isDeleted != null and isDeleted != ''">
                and is_deleted = #{isDeleted}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by gmt_modified, gmt_create desc
    </select>

    <select id="selectPage" resultType="com.rany.uic.infra.po.TenantPO"
            parameterType="com.rany.uic.common.params.TenantPageSearchParam" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tenant
        <where>
            <if test="isvId != null">
                and isv_id = #{isvId}
            </if>
            <if test="name != null">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="isDeleted != null and isDeleted != ''">
                and is_deleted = #{isDeleted}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
        order by gmt_modified, gmt_create desc
    </select>
</mapper>